---
interface Props {
  href: string;
  label: string;
  brand?: string;
}

const { href, label, brand } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="nofollow sponsored noopener"
  class="inline-flex items-center gap-1 text-brand-green underline underline-offset-2 transition-colors hover:text-brand-green-light"
>
  {brand && <span class="font-semibold">{brand}</span>}
  {label}
  <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
  </svg>
</a>

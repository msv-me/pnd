---
interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Preps Not Dead",
  subtitle = "Method to the Madras",
} = Astro.props;
---

<section class="bg-brand-cream py-10 text-center sm:py-12">
  <div class="mx-auto max-w-4xl px-6">
    <img
      src="/images/pnd-logo-transparent.png"
      alt="Preps Not Dead logo"
      class="mx-auto mb-5 h-20 w-auto sm:h-24"
    />
    <h1 class="font-serif text-4xl font-bold tracking-tight text-brand-black sm:text-5xl lg:text-6xl">
      {title}
    </h1>
    <p class="mx-auto mt-4 max-w-2xl text-lg text-brand-gray sm:text-xl">
      {subtitle}
    </p>
    <div class="mt-5 flex items-center justify-center gap-4">
      <a
        href="/blog/"
        class="rounded-sm bg-brand-green px-6 py-3 text-sm font-semibold uppercase tracking-widest text-white transition-colors hover:bg-brand-green-light"
      >
        Read the Blog
      </a>
      <a
        href="/about/"
        class="rounded-sm border border-brand-black px-6 py-3 text-sm font-semibold uppercase tracking-widest text-brand-black transition-colors hover:border-brand-green hover:text-brand-green"
      >
        About
      </a>
    </div>
  </div>
</section>

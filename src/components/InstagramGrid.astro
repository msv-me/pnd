---
import { getInstagramPosts } from "../lib/instagram";

const posts = await getInstagramPosts(12);
---

<section class="bg-brand-black py-16 text-white">
  <div class="mx-auto max-w-6xl px-6">
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h2 class="font-serif text-2xl font-bold sm:text-3xl">@prepsnotdead</h2>
        <p class="mt-1 text-gray-400">Follow along on Instagram</p>
      </div>
      <a
        href="https://instagram.com/prepsnotdead"
        target="_blank"
        rel="noopener noreferrer"
        class="hidden sm:inline-flex items-center gap-2 rounded-sm border border-gray-600 px-5 py-2.5 text-sm font-semibold uppercase tracking-widest text-gray-300 transition-colors hover:border-brand-green hover:text-brand-green"
      >
        Follow
      </a>
    </div>

    {posts.length > 0 ? (
      <div class="grid grid-cols-2 gap-1 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6">
        {posts.map((post) => (
          <a
            href={post.permalink}
            target="_blank"
            rel="noopener noreferrer"
            class="group relative aspect-square overflow-hidden"
          >
            <img
              src={post.media_url}
              alt={post.caption?.slice(0, 100) || "Instagram post"}
              loading="lazy"
              class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-brand-green/0 transition-colors duration-300 group-hover:bg-brand-green/20" />
          </a>
        ))}
      </div>
    ) : (
      <div class="grid grid-cols-3 gap-1 sm:grid-cols-6">
        {Array.from({ length: 6 }).map(() => (
          <a
            href="https://instagram.com/prepsnotdead"
            target="_blank"
            rel="noopener noreferrer"
            class="group relative aspect-square overflow-hidden bg-gray-900"
          >
            <div class="flex h-full items-center justify-center text-gray-700 transition-colors group-hover:text-brand-green">
              <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    )}

    <div class="mt-6 text-center sm:hidden">
      <a
        href="https://instagram.com/prepsnotdead"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 rounded-sm border border-gray-600 px-5 py-2.5 text-sm font-semibold uppercase tracking-widest text-gray-300 transition-colors hover:border-brand-green hover:text-brand-green"
      >
        Follow on Instagram
      </a>
    </div>
  </div>
</section>

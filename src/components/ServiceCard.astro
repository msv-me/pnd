---
interface Props {
  title: string;
  description: string;
  icon?: string;
}

const { title, description } = Astro.props;
---

<div class="rounded-lg border border-brand-gray-light bg-white p-8">
  <h3 class="font-serif text-xl font-bold">{title}</h3>
  <p class="mt-3 leading-relaxed text-brand-gray">{description}</p>
</div>
